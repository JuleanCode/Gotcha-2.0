@model IEnumerable<Gotcha_2._0.Models.GameType>

@{
    ViewBag.Title = "GameTypeList";
}

<h2>GameTypeList</h2>

<p>
    @Html.ActionLink("Create New", "GameTypeAdd")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "GameTypeEdit", new { id=item.Id }) |
            @Html.ActionLink("Delete", "GameTypeDelete", new { id=item.Id })
        </td>
    </tr>
}

</table>
